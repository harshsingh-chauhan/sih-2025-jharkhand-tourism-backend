# =============================================================================
# JharkhandYatra Backend - Environment Variables
# =============================================================================
# Copy this file to .env and update the values as needed.
# NEVER commit .env to version control!
# =============================================================================

# Server Configuration
PORT=2201
NODE_ENV=development
TZ=Asia/Kolkata

# MongoDB Configuration
# Option 1: Docker Compose (recommended for development)
MONGO_URI=mongodb://app_user:app_password@localhost:27017/sih-2025-jharkhand-tourism?authSource=sih-2025-jharkhand-tourism

# Option 2: MongoDB Atlas (for production)
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/sih-2025-jharkhand-tourism?retryWrites=true&w=majority

# Docker MongoDB Settings (used by docker-compose.yml)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password123
MONGO_DATABASE=sih-2025-jharkhand-tourism
MONGO_PORT=27017

# JWT Authentication (to be configured in Phase 3)
JWT_SECRET=your-super-secret-key-change-this-in-production-minimum-32-characters
JWT_EXPIRES_IN=7d

# bcrypt Configuration
BCRYPT_SALT_ROUNDS=12
